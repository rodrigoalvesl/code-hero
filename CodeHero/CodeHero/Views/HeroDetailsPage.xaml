<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeHero.Views.HeroDetailsPage"
             Title="{Binding HeroData.Name}">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Image Source="{Binding HeroData.Picture}" BackgroundColor="Black" HorizontalOptions="CenterAndExpand"/>

            <Label Text="{Binding HeroData.Name}" FontSize="16"/>
            <Label Text="{Binding HeroData.Description}" FontSize="16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>